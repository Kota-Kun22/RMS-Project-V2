<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/customers_profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/customer_profile_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pp_bg"
                    android:padding="4dp"
                    android:src="@drawable/add_media_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/poppins_thin"
                        android:padding="6dp"
                        android:text="Amit Jha"
                        android:textSize="@dimen/h2TextSize"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:padding="6dp"
                            android:text="@string/mob_number_profile_display"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Phone_number_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:text=" 9588779890"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/colour"
                            android:src="@drawable/flash_ic"
                            app:tint="@color/colour" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/comment_ic"
                            app:tint="@color/colour" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:padding="6dp"
                            android:text="Telecom:"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/telecom_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:text="Airtel"
                            android:textSize="16sp" />
                        <ImageView
                            android:id="@+id/telecom_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_margin="6dp"
                            android:src="@drawable/airtel_ic" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:elevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/customers_profile_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_thin"
                        android:paddingStart="4dp"
                        android:text="12/11/2024"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Expiry_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="200dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/g_light_red"
                        android:fontFamily="@font/poppins_thin"
                        android:text="expiry"
                        android:textColor="@color/g_red"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
