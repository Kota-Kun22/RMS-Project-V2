<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:background="@drawable/back_icon"
        android:backgroundTint="@color/colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recharge Details"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_light"
        android:text="Enter Customerâ€™s recharge details here!"
        android:textSize="@dimen/h2TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textViewCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_thin"
        android:text="Customer"
        android:textColor="@color/black"
        android:textSize="@dimen/h3TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Customer Name"
        android:minHeight="48dp"
        android:padding="16dp"
        android:textSize="@dimen/h2TextSize"
        android:background="@drawable/edittext_bg"
        android:textAlignment="textStart"
        android:textColorHint="@color/g_gray700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCustomer" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_thin"
        android:text="Mobile No"
        android:textColor="@color/black"
        android:textSize="@dimen/h3TextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_name" />

    <TextView

        android:id="@+id/editText"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_bg"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textColorHint="@color/g_gray700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:text="@string/telecom"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/black"
        android:textSize="@dimen/h3TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/customer_name" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_bg"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/g_gray700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/black"
        android:textSize="@dimen/h3TextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText3"
        style="@style/editText"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_bg"
        android:inputType="numberDecimal"
        android:padding="6dp"
        android:textSize="@dimen/h2TextSize"
        android:hint="Enter Amount"
        android:textAlignment="textStart"
        android:textColorHint="@color/g_gray700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Status"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/h3TextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Spinner
        android:id="@+id/spinner_paymentStatus"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/spinner_bg"
        android:padding="6dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validity"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/black"
        android:textSize="@dimen/h3TextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />


    <Spinner
        android:id="@+id/spinner_Validity"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:background="@drawable/spinner_bg"
        android:padding="6dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />


    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Validity" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="403dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/submit_btn_bg"
        android:fontFamily="@font/poppins_thin"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="@dimen/h3TextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2" />


</androidx.constraintlayout.widget.ConstraintLayout>