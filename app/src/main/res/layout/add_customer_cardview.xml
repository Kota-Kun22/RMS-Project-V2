<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="6dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_media_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pp_bg"
        android:padding="26dp"
        android:src="@drawable/add_media_image"
        app:tint="@color/purple_500"
        android:contentDescription="@string/media_image" />
    <TextView
        android:id="@+id/insert_edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/insert_image"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/h2TextSize" />
    <EditText
        android:id="@+id/assign_Role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/ic_down"
        android:drawablePadding="10dp"
        android:inputType="none"
        android:fontFamily="@font/poppins_light"
        android:hint="@string/assign_role"
        android:padding="8dp"
        android:backgroundTint="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:textSize="@dimen/h3TextSize"
        android:autofillHints="" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_thin"
        android:textSize="@dimen/h3TextSize"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:ems="20"
        android:hint="@string/user_name"
        android:textColorHint="@color/Transparent"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text=""
        android:textSize="@dimen/h2TextSize"
        android:autofillHints="" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_of_birth"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_thin"
        android:textSize="@dimen/h3TextSize"/>

    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:drawableEnd="@drawable/ic_calendar"
        android:ems="20"
        android:hint="@string/dob"
        android:inputType="date"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textColorHint="@color/g_gray700"
        android:textSize="@dimen/h2TextSize"
        android:autofillHints="" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mob_no"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_thin"
                android:textSize="@dimen/h3TextSize"/>

            <EditText
                android:id="@+id/mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="@string/mobile_number"
                android:textColorHint="@color/Transparent"
                android:inputType="phone"
                android:minHeight="48dp"
                android:text=""
                android:textSize="@dimen/h2TextSize"
                android:autofillHints="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telecom"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_thin"
                android:textSize="@dimen/h3TextSize"/>

            <EditText
                android:id="@+id/telecom_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="@string/select"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_down"
                android:drawableTint="@color/black"
                android:minHeight="48dp"
                android:text=""
                android:textColorHint="@color/g_gray700"
                android:textSize="@dimen/h2TextSize"
                android:autofillHints="" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_id"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_thin"
        android:textSize="@dimen/h3TextSize"/>

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:ems="20"
        android:hint="@string/email"
        android:textColorHint="@color/Transparent"
        android:inputType="textEmailAddress"
        android:drawableTint="@color/black"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textSize="@dimen/h2TextSize"
        android:autofillHints="" />
    <TextView
        android:id="@+id/delete_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_member"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/g_red"
        android:textSize="@dimen/h2TextSize"/>

</LinearLayout>
</androidx.cardview.widget.CardView>